<h1>Sign In</h1>

<form action="<%= session_url %>" method="post">

  <input type="hidden"
         name="authenticity_token"
         value="#{ form_authenticity_token }">

  <div class="form-group">
    <label>
      Username
      <input type="text" name="user[username]" class="form-control" value="">
    </label>
    <br>
    <label>
      Password
      <input type="password" name="user[password]" class="form-control" value="">
    </label>
  </div>

  <input type="submit" value="Sign In" class="btn-default">
</form>
