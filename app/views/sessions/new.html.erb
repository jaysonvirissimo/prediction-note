<div class="well">
  <form class="form-horizontal" action="<%= session_url %>" method="post">

    <input type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

    <fieldset>
      <legend><h1>Sign Into An Existing Account</h1></legend>
      <div class="form-group" style="width: 50%;">
        <label for="inputUsername" class="col-lg-2 control-label">Username</label>
        <div class="col-lg-10">
          <input type="text"
          class="form-control"
          id="inputUsername"
          placeholder="Your username goes here."
          name="user[username]">
        </div>
      </div>

      <div class="form-group" style="width: 50%;">
        <label for="inputPassword" class="col-lg-2 control-label">Password</label>
        <div class="col-lg-10">
          <input type="password"
          class="form-control"
          id="inputPassword"
          placeholder="Your password goes here."
          name="user[password]">
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-10">
          <button id="guest-button" class="btn btn-primary">Guest User</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>

    </fieldset>
  </form>
</div>

<script>
$(document).ready(function () {
  $("#guest-button").on("click", function (event) {
    event.preventDefault();
    $("#inputUsername").attr("value", "Guest");
    $("#inputPassword").attr("value", "password")
  });
});
</script>
