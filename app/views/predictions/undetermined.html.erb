<h1>Overdue Predictions</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Statement</th>
      <th>Deadline</th>
    </tr>
  </thead>
  <tbody>
    <% count = 0 %>

    <% @predictions.each do |prediction| %>
      <% if prediction.deadline < Time.now %>
        <% count += 1 %>
        <tr>
          <td><%= count %></td>
          <td><%= link_to(prediction.statement, prediction_url(prediction)) %></td>
          <td><%= distance_of_time_in_words(prediction.deadline, Time.now) %> ago</td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
