<div>
  <h2><%= @prediction.statement %></h2>
  <h5><em>Created at: <%= @prediction.created_at %></em></h5>
  <h5>
  <% if @prediction.deadline < Time.now %>
    The outcome was known
    <%= distance_of_time_in_words(@prediction.deadline, Time.now) %> ago.
  <% else %>
    The outcome will be known in
    <%= distance_of_time_in_words(@prediction.deadline, Time.now) %>.
  <% end %>
</h5>


  <h6>Predictor: <%= link_to(@prediction.user.username, @prediction.user) %></h6>
</div>

<br>

<% if @prediction.wagers.length > 0 %>
  <div>
    <h4>Wagers</h4>
    <ul>
    <% @prediction.wagers.each do |wager| %>
      <li>
        <%= wager.probability %>% <%= link_to(wager.user.username, wager.user) %>
        on <%= Time.now %>
      </li>
    <% end %>
    </ul>
  </div>

  <br>
<% end %>

<% if @prediction.deadline > Time.now && signed_in? %>
  <div class="form-group">
    <h4>Make a Wager</h4>
    <div class="well">
      <form action="<%= wagers_url %>" method="post">

        <input type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

        <input type="hidden"
        name="wager[prediction_id]"
        value="<%= @prediction.id %>">

        <label>
          Probability (0-100%)
          <input type="number"
                name="wager[probability]"
                class="form-control"
                value="50"
                min="0"
                max="100">
        </label>
        <br>

        <input type="submit" value="Affirm!" class="btn-default">
      </form>
    </div>
  </div>
<% end %>

<% if signed_in? %>
  <div class="form-group">
    <h4>Make a Judgment</h4>
    <div class="well">
      <div class="btn-group btn-group-justified">
        <a href="#" class="btn btn-success">Verified</a>
        <a href="#" class="btn btn-info">Undetermined</a>
        <a href="#" class="btn btn-danger">Falsified</a>
      </div>
    </div>
  </div>
<% end %>
